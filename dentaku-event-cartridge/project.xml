<project>
    <extend>${basedir}/../project.xml</extend>
    <artifactId>dentaku-event-cartridge</artifactId>
    <name>Gentaku Event Cartridge</name>
    <dependencies>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>dentaku-metadata-service</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>gentaku</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>dentaku-qtags-cartridge</artifactId>
            <version>SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>xml-apis</groupId>
            <artifactId>xml-apis</artifactId>
            <version>1.0.b2</version>
        </dependency>
        <dependency>
            <groupId>xdoclet-plugins</groupId>
            <artifactId>xdoclet-plugin-qtags</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <id>antlr</id>
            <version>2.7.2</version>
            <url>http://www.antlr.org/</url>
        </dependency>
    </dependencies>
    <build>
        <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <includes>
                    <include>**/*.jelly</include>
                    <include>**/*.xml</include>
                    <include>**/*.vm</include>
                    <include>**/*.ftl</include>
                </includes>
            </resource>
        </resources>
        <unitTest>
            <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <includes>
                        <include>**/*.zip</include>
                    </includes>
                </resource>
            </resources>
            <excludes>
                <include>org/dentaku/gentaku/cartridge/qtag_example/**/*Test.*</include>
            </excludes>
        </unitTest>
    </build>
</project>