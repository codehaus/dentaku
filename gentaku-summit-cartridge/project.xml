<?xml version="1.0"?>
<project>
    <extend>../project.xml</extend>
    <artifactId>gentaku-summit-cartridge</artifactId>
    <name>Gentaku Summit Cartridge</name>
	<shortDescription>Builds the Velocity screens, pull tools and the action code.</shortDescription>
    <dependencies>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>dentaku-metadata-service</artifactId>
            <version>${pom.currentVersion}</version>
			<url>http://dentaku.codehaus.org</url>
        </dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>gentaku</artifactId>
            <version>${pom.currentVersion}</version>
			<url>http://dentaku.codehaus.org</url>
        </dependency>
        <dependency>
            <groupId>xstream</groupId>
            <artifactId>xstream</artifactId>
            <version>1.0.3.2-dev</version>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.0</version>
        </dependency>
        <!--        hibernate-->
        <dependency>
            <groupId>hibernate</groupId>
            <artifactId>hibernate</artifactId>
            <version>2.1.3</version>
        </dependency>
        <dependency>
            <groupId>cglib</groupId>
            <artifactId>cglib-full</artifactId>
            <version>2.0.1</version>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.3</version>
        </dependency>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>1.6.1</version>
        </dependency>
        <dependency>
            <groupId>dom4j</groupId>
            <artifactId>dom4j</artifactId>
            <version>1.4</version>
        </dependency>
        <dependency>
            <groupId>ehcache</groupId>
            <artifactId>ehcache</artifactId>
            <version>0.7</version>
        </dependency>
        <dependency>
            <groupId>odmg</groupId>
            <artifactId>odmg</artifactId>
            <version>3.0</version>
        </dependency>
        <dependency>
            <groupId>opensymphony</groupId>
            <artifactId>oscache</artifactId>
            <version>2.0.1</version>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>${basedir}/src/java</sourceDirectory>
        <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>	
        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
        <unitTest>
            <includes>
                <include>**/TestPlugin.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
					<excludes>
						<exclude>**/*.java</exclude>
					</excludes>
                </resource>
            </resources>
        </unitTest>
    </build>
</project>