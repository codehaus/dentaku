<project>
    <extend>../project.xml</extend>
    <artifactId>gentaku-summit-cartridge</artifactId>
    <name>Gentaku Summit Cartridge</name>
	<shortDescription>Builds the Veolcity screens, pull tools and the action code.</shortDescription>
    <dependencies>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>dentaku-metadata-service</artifactId>
            <version>${pom.currentVersion}</version>
			<url>http://dentaku.codehaus.org</url>
        </dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>gentaku</artifactId>
            <version>${pom.currentVersion}</version>
			<url>http://dentaku.codehaus.org</url>
        </dependency>
        <dependency>
            <groupId>xstream</groupId>
            <artifactId>xstream</artifactId>
            <version>1.0.3.2-dev</version>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.0</version>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>${basedir}/src/java</sourceDirectory>
        <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>	
        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
        <unitTest>
            <includes>
                <include>**/Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
					<excludes>
						<exclude>**/*.java</exclude>
					</excludes>
                </resource>
            </resources>
        </unitTest>
    </build>
</project>