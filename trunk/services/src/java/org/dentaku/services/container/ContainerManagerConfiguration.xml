<plexus>
    <logging>
        <implementation>org.codehaus.plexus.logging.ConsoleLoggerManager</implementation>
        <logger>
            <threshold>DEBUG</threshold>
        </logger>
    </logging>
    <components>
        <component>
            <role>org.dentaku.services.persistence.PersistenceManager</role>
            <implementation>org.dentaku.services.persistence.hibernate.HibernatePersistenceManager</implementation>
            <requirements>
                <requirement>
                    <role>org.dentaku.services.persistence.PersistenceFactory</role>
                    <field-name>factories</field-name>
                </requirement>
                <requirement>
                    <role>org.dentaku.services.persistence.hibernate.SessionProvider</role>
                </requirement>
            </requirements>
        </component>
        <component>
            <role>org.dentaku.services.persistence.hibernate.SessionProvider</role>
            <implementation>org.dentaku.services.persistence.hibernate.ThreadLocalSessionProvider</implementation>
        </component>
        <component>
            <role>org.dentaku.services.rules.DroolsNativeRulesProcessor</role>
            <implementation>org.dentaku.services.rules.DefaultDroolsNativeRulesProcessor</implementation>
            <configuration>
                <ruleFiles>
                    <string>/org/dentaku/drools/query/TestRule.drl</string>
                </ruleFiles>
            </configuration>
        </component>
    </components>
</plexus>
