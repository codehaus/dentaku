<?xml version="1.0"?>

<project>
    <extend>${basedir}/../project.xml</extend>
    <artifactId>dentaku-services</artifactId>
    <name>dentaku-services</name>
    <package>org.dentaku.services.*</package>

    <dependencies>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>dentaku-event-cartridge</artifactId>
            <version>${pom.currentVersion}</version>
        </dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>gentaku</artifactId>
            <version>${pom.currentVersion}</version>
        </dependency>
        <dependency>
            <id>mockejb</id>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-jsr94</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-core</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-io</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-smf</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-java</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-base</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>bsh</groupId>
            <artifactId>bsh</artifactId>
            <version>2.0b1</version>
        </dependency>
        <dependency>
            <id>jsr94</id>
            <properties>
                <bin_dist>true</bin_dist>
            </properties>
        </dependency>
        <dependency>
            <id>cccssl</id>
            <properties>
                <bin_dist>true</bin_dist>
            </properties>
        </dependency>

        <!--        only for testing-->
        <dependency>
            <groupId>cactus</groupId>
            <artifactId>cactus</artifactId>
            <version>13-1.6dev</version>
        </dependency>
        <dependency>
            <groupId>commons-httpclient</groupId>
            <artifactId>commons-httpclient</artifactId>
            <version>2.0-rc2</version>
        </dependency>
        <dependency>
            <groupId>aspectj</groupId>
            <artifactId>aspectjrt</artifactId>
            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>generama</groupId>
            <artifactId>generama</artifactId>
            <version>1.1-SNAPSHOT</version>
        </dependency>
        <!--       end only for testing-->

    </dependencies>
    <build>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
                <include>${dentaku.test.src}/**/*.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>target/test-src</directory>
                    <includes>
                        <include>**/*.xml</include>
                    </includes>
                </resource>
                <resource>
                    <directory>src/test</directory>
                    <includes>
                        <include>**/*.xml</include>
                    </includes>
                </resource>
                <resource>
                    <directory>src/test</directory>
                    <includes>
                        <include>**/*.drl</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>src/java</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>
