<project>
    <extend>${basedir}/../project.xml</extend>
    <artifactId>dentaku-cartridge-generator</artifactId>
    <name>dentaku-cartridge-generator</name>
    <dependencies>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>dentaku-metadata-service</artifactId>
            <version>${pom.currentVersion}</version>
        </dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>gentaku</artifactId>
            <version>${pom.currentVersion}</version>
        </dependency>
        <dependency>
            <groupId>jaxen</groupId>
            <artifactId>jaxen</artifactId>
            <version>1.1-beta-4</version>
        </dependency>
        <dependency>
            <id>commons-jelly</id>
            <version>1.0-RC1</version>
            <url>http://jakarta.apache.org/jelly/</url>
        </dependency>
    </dependencies>
    <build>
        <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <includes>
                    <include>**/*.jelly</include>
                    <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <includes>
                        <include>**/*.zip</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
    </build>
</project>