<plexus>
    <logging>
        <implementation>org.codehaus.plexus.logging.ConsoleLoggerManager</implementation>
        <logger>
            <threshold>DEBUG</threshold>
        </logger>
    </logging>
    <components>
        <component>
            <role>org.dentaku.services.metadata.MetadataService</role>
            <implementation>org.dentaku.services.metadata.DefaultMetadataService</implementation>
            <requirement>
                <role>org.dentaku.foundation.pipeline.Pipeline</role>
            </requirement>
        </component>
        <component>
            <role>org.dentaku.services.metadata.RepositoryReader</role>
            <implementation>org.dentaku.services.metadata.MagicDrawRepositoryReader</implementation>
            <configuration>
                <modelPath>src/test/org/dentaku/services/metadata/TestModel.xml.zip</modelPath>
            </configuration>
        </component>
    </components>
</plexus>
