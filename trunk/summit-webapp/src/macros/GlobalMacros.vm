#macro (HeaderCell $content $headeradjust)
  <td>
    <table>
      <tr>
        <td width="$headeradjust"></td>
        <td>
          <p><b>$content</b></p>
        </td>
      </tr>
    </table>
  </td>
#end

#macro (HeaderCellCol $content $headeradjust $colspan)
  <td colspan="$colspan">
    <table>
      <tr>
        <td width="$headeradjust"></td>
        <td>
          <p><b>$content</b></p>
        </td>
      </tr>
    </table>
  </td>
#end

#macro (LabelCell  $content)
  <td width="$ui.screenLabelWidth">
