
<cartridge name="dentaku-event">
    <property name="language" value="java" />
    <property name="language" value="java" />

    <stereotype name="Event" />

    <outlet name="events" />
    <outlet name="rules" />
    <class name="org.dentaku.cartridge.EventGeneratorCartridge"/>

    <template
        stereotype="Event"
        sheet="templates/Event.vsl"
        outputPattern="{0}/{1}.java"
        outlet="events"
        overWrite="true"
        transformClass="org.dentaku.cartridge.EventScriptHelper"
    />
    <template
        stereotype="Event"
        sheet="templates/Werkflow.vsl"
        outputPattern="{0}/{1}.xml"
        outlet="events"
        overWrite="true"
    />

    <template
        stereotype="Event"
        outputPattern="Events.drl"
        outlet="rules"
        overWrite="true"
        globalTransformClass="org.dentaku.cartridge.RulesGlobalTransform"
    />

</cartridge>
