<?xml version="1.0"?>
<project>
    <extend>${basedir}/../project.xml</extend>
    <artifactId>dentaku-foundation</artifactId>
    <name>Foundation for Dentaku</name>
    <package>org.dentaku.foundation.*</package>
    <dependencies>
        <dependency>
			<groupId>bsh</groupId>
            <artifactId>bsh-core</artifactId>
			<version>1.3.0</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
		<dependency>
			<groupId>mockejb</groupId>
			<artifactId>mockejb</artifactId>
			<version>0.5</version>
		</dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>dentaku-services</artifactId>
            <version>SNAPSHOT</version>
            <type>ejb</type>
			<properties>
				<eclipse.dependency>true</eclipse.dependency>
			</properties>
        </dependency>
        <!--        werkflow-->
        <dependency>
            <groupId>werkflow</groupId>
            <artifactId>werkflow</artifactId>
            <version>1.0-beta-6</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>bsf</groupId>
            <artifactId>bsf</artifactId>
            <version>2.3.0</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>servletapi</groupId>
            <artifactId>servletapi</artifactId>
            <version>2.3</version>
        </dependency>
        <dependency>
			<groupId>geronimo-spec</groupId>
			<artifactId>geronimo-spec-j2ee</artifactId>
            <version>1.4-rc4</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>activemq</groupId>
            <artifactId>activemq-core</artifactId>
            <version>2.0-SNAPSHOT</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>1.6.1</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.0</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.3</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>concurrent</groupId>
            <artifactId>concurrent</artifactId>
            <version>1.3.2</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>dom4j</groupId>
            <artifactId>dom4j</artifactId>
            <version>1.4</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>ognl</groupId>
            <artifactId>ognl</artifactId>
            <version>2.5.1</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>

        <!--        werkflow-->
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-jsr94</artifactId>
            <version>SNAPSHOT</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-base</artifactId>
            <version>SNAPSHOT</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-core</artifactId>
            <version>SNAPSHOT</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-java</artifactId>
            <version>SNAPSHOT</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-smf</artifactId>
            <version>SNAPSHOT</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-io</artifactId>
            <version>SNAPSHOT</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>antlr</groupId>
            <artifactId>antlr</artifactId>
            <version>2.7.2</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
			<groupId>jsr</groupId>
			<artifactId>jsr94</artifactId>
			<version>1.0</version>
            <properties>
                <bin_dist>true</bin_dist>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.3</version>
            <properties>
                <ejb.bundle>true</ejb.bundle>
            </properties>
        </dependency>

    </dependencies>
    <build>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>src/test</directory>
                    <includes>
                        <include>**/*.xml</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>

        <resources>
            <resource>
                <directory>src/java</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>target/xdoclet/ejb</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>
